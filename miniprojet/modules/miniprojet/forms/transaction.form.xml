<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">
<hidden ref="idTransaction"/>

<input ref="libelle" required="true">
<label>Libellé Transaction</label>
<alert type="required">Le libellé est obligatoire</alert>
</input>

<input ref="montant" required="true">
<label>Montant</label>
<alert type="required">Le montant est obligatoire</alert>
</input>

<checkbox ref="enAttente" >
<label>En attente</label>
<label>opération en attente</label>
<help>Cocher pour mettre l'opération en attente</help>

</checkbox>

<input ref="typeTransaction" required="true">
<label>Type de la transaction</label>
<alert type="invalid">Obligatoire</alert>
</input>



<submit ref="submit">
<label>Enregistrer</label>
</submit>
</form>